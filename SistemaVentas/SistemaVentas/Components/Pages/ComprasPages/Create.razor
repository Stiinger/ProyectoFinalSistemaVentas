										<tr>
											<th>Cantidad</th>
											<th>Descripci&oacute;n</th>
											<th>Uni. Medida</th>
											<th>Cant. por Empaque</th>
											<th>Costo</th>
											<th>C/U</th>
											<th>ITBIS</th>
											<th>Costo Total Neto</th>
											<th></th>
										</tr>
									</thead>
									<tbody>
										@foreach (var detalle in compra.ComprasDetalle)
