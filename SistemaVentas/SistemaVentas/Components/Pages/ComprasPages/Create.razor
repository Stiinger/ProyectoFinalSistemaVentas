<PageTitle>Crear Nueva Compra</PageTitle>
<RadzenNotification/>
<EditForm Model="compra" OnValidSubmit="Crear" FormName="RegistroCompras">
	<DataAnnotationsValidator />
	<div class="container">
		<div class="card shadow-lg">
			@*Header*@
