								<button type="button" class="btn btn-outline-success" @onclick="Pagar"><i class="bi bi-check-lg" /> Verificar</button>
							</div>
							@*
							<div class="mensajeCorrecto mb-3">
								@mensajeValidacionTarjeta
							</div>
							<div class="mensajeError mb-3">
								@mensajeErrorTarjeta
