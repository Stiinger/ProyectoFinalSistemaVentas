					var montoFaltante = compra.TotalNeto - capital.Efectivo;
					compra.Devuelta = 0;
					compra.Deuda = montoFaltante;
					// compra.Estado = "Pendiente";
					compraValidada = true;
				}
				if (compra.MontoPagado > compra.TotalNeto)///si el monto es mayor que el total
				{
					capital.Efectivo -= compra.TotalNeto;
					compra.Devuelta = Math.Round(compra.MontoPagado - compra.TotalNeto, 2);
					compra.Deuda = 0;
					// compra.Estado = "Pagada";
					compraValidada = true;
				}
				else if (compra.MontoPagado < compra.TotalNeto)///si el monto es menor que el total
				{
					var montoFaltante = compra.TotalNeto - compra.MontoPagado;
					capital.Efectivo -= compra.MontoPagado;
					compra.Devuelta = 0;
					compra.Deuda = montoFaltante;
					// compra.Estado = "Pendiente";
					compraValidada = true;
				}
				else
				{
					capital.Efectivo -= compra.TotalNeto;///si el monto es igual que el total
					compra.Devuelta = 0;
					compra.Deuda = 0;
					// compra.Estado = "Pagada";
					compraValidada = true;
				}
				break;
			case 2:
				compra.Deuda = compra.TotalNeto;
				// compra.Estado = "Pendiente";
				compraValidada = true;
				break;
			case 3:
				if (banco.Monto < compra.TotalNeto)
				{
					mensajeErrorTarjeta = "Fondos insuficientes.";
					mensajeValidacionTarjeta = string.Empty;
					compraValidada = false;
				}
				else
				{
					if (usuario == banco.Usuario && numeroTarjeta == banco.NumeroTarjeta
					&& fechaVencimiento == banco.FechaVencimiento && codigoSeguridad == banco.CodigoSeguridad)
					{
						banco.Monto -= compra.TotalNeto;
						mensajeValidacionTarjeta = "La Tarjeta fue reconocida con éxito.";
						mensajeErrorTarjeta = string.Empty;
						compraValidada = true;
					}
					else
					{
						mensajeErrorTarjeta = "La tarjeta no fue reconocida correctamente, intente de nuevo.";
						mensajeValidacionTarjeta = string.Empty;
						compraValidada = false;
					}
				}
				StateHasChanged();
				break;
		}
	}

